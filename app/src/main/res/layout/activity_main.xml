<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/paw">

    <TextView
        android:id="@+id/textView"
        android:layout_width="337dp"
        android:layout_height="168dp"
        android:layout_marginTop="280dp"
        android:fontFamily="@font/candal"
        android:gravity="center"
        android:scrollbars="vertical"
        android:text="Enter link above to display breed"
        android:textAlignment="center"
        android:textColor="@android:color/background_dark"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonLoadPicture" />

    <Button
        android:id="@+id/buttonLoadPicture"
        android:layout_width="328dp"
        android:layout_height="53dp"
        android:layout_marginTop="120dp"
        android:layout_marginBottom="52dp"
        android:background="@android:drawable/screen_background_light_transparent"
        android:onClick="loadImagefromGallery"
        android:text="Show Breed"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="329dp"
        android:layout_height="45dp"
        android:layout_marginTop="42dp"
        android:ems="10"
        android:hint="Enter the link to the image"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColor="@android:color/background_dark"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="261dp"
        android:layout_height="248dp"
        android:layout_marginBottom="10dp"
        android:adjustViewBounds="false"
        android:baselineAlignBottom="false"
        android:fadingEdgeLength="9000dp"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        tools:srcCompat="@tools:sample/avatars[12]" />

</android.support.constraint.ConstraintLayout>